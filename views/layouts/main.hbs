<html>
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/bulma.css">
    <link rel="stylesheet" type="text/css" href="/style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <title>Amanda Axelsson</title>
    <link rel="shortcut icon" type="image/png" href="pandaLogo.png" />
  </head>
  <body>
    <section class="hero">
      <div class="hero-body">
          <div class="navbar-brand">
            <img src="/panda.png" alt="logo">
            <div class="container">
              <h1 class="title">Amanda Axelsson</h1>
              <h2 class="subtitle">Portfolio</h2>
            </div>
          </div>
      </div>
    </section>
    <nav class="navbar-color">
      <div class="navbar-burger burger" data-target="navbar">
          <span></span>
          <span></span>
          <span></span>
      </div>
      <div id="navbar" class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item" href="/">
            Home
          </a>
          <a class="navbar-item" href="/about">
            About me
          </a>
          <a class="navbar-item" href="/contact">
            Contact
          </a>
          <a class="navbar-item" href="/portfolio">
            Portfolio
          </a>
          <a class="navbar-item" href="/blog">
            Blog
          </a>
        </div>
      </div>
    </nav>
      {{{body}}}
  </body>
  <footer>
    <div class="tile is-ancestor navbar-color">
      <div class="tile is-parent">
        <div class="tile level is-child box">
          <p style="display:inline-block;">Website made by: Amanda Axelsson</p>
          <div class="level-right">
            {{#if session.isLoggedIn}}
              <a class="button navbar-color" href="/logout">
                Log out
              </a>
            {{else}}
              <a class="button navbar-color" href="/login">
                Login
              </a>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </footer>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <script src="/main.js"></script>
</html>