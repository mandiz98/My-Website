<div id="portfolio">
    <div class="tile is-ancestor is-vertical navbar-color">
        <div class="tile is-parent">
            <div class="tile is-child box">
                <h1 class="big-header has-text-centered">Portfolio</h1>
                {{#if session.isLoggedIn}}
                    <a href="portfolio/post">
                        <div class="buttons is-right is-focused">
                            <button class="button navbar-color">New Project</button>
                        </div>
                    </a>
                {{/if}}
            </div>
        </div>
        <div class="tile is-parent">
            {{#each projects}}
                <div class="tile is-child box">

                </div>
            {{/each}}
        </div>
    </div>
</div>