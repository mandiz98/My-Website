<div id="portfolio">
    <div class="tile is-ancestor is-vertical navbar-color">
        <div class="tile is-parent">
            <div class="tile is-child has-text-centered box">
                <h1 class="big-header">Portfolio</h1>
                {{#if session.isLoggedIn}}
                    <a class="button navbar-color" href="/portfolio/project/">
                        New Project
                    </a>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="tile is-ancestor navbar-color is-vertical">
        {{#each projects}}
            <div class="tile is-parent is-vertical">
                <div class="tile is-child box is-size-3 has-text-centered">
                    <a href="/portfolio/project/{{id}}" class="has-text-weight-bold">{{title}}</a>
                    <div class="tile is-child box is-size-5 has-text-centered">
                        Description: {{description}}
                    </div>
                    <div class="tile is-child box is-size-5">
                        Link: <a href="{{link}}">{{link}}</a>
                    </div>
                    {{#if @root.session.isLoggedIn}}
                        <div class="buttons is-right">
                            <a class="button navbar-color" href="/portfolio/project/{{id}}/edit">Edit</a>
                            <div class="buttons-same-height-portfolio">
                                <form action="/portfolio/project/{{id}}/delete" method="post">
                                    <input type="submit" class="button navbar-color" value="Delete">
                                </form>
                            </div>
                        </div>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </div>
</div>
<div class="tile is-ancestor navbar-color">
    <div class="tile is-parent">
        <div class="tile is-child box has-text-centered">
            <p>number of projects per page</p>
            <form method="GET">
                <div class="select">
                    <select name="limit">
                        <option value="1">1</option>
                        <option value="3">3</option>
                        <option value="5">5</option>
                        <option value="10">10</option>
                    </select>
                </div>
                <input class="button" type="submit" value="Apply">
            </form>
            <p>Pages:</p>
            {{#for 0 totalPages 1}}
                    <a href="/portfolio?page={{inc this}}&limit={{@root.limit}}">{{inc this}}</a>
            {{/for}}
        </div>
    </div>
</div>